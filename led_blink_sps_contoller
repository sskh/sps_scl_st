PROGRAM MAIN
VAR
	eini AT%Q* : ARRAY [1..8] OF BOOL;
	arri : ARRAY [1..51] OF INT := [1,2,4,6,8,7,5,3,7,4,5,8,7,6,3,2,1,3,4,6,5,7,8,5,6,3,2,1,3,5,7,8,6,4,2,1,8,2,7,5,3,4,6,8,7,5,3,1,2,4,6];
	i: INT;	
	ccc : TON;
END_VAR

// Programm that turn on from 10 leds on controller for 300 ms

 CASE i OF
	0: 
	i:=1;
	1..51:
	eini[arri[i]] := TRUE;
	ccc(in:=TRUE, pt:=T#300mS);
	IF ccc.Q THEN
		ccc(in:=FALSE);
		eini[arri[i]] := FALSE;
		i:=i+1;
	END_IF
	52:
	i:=0;
END_CASE
